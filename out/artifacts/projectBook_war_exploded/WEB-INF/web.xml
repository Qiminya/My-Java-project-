    </servlet>
    <servlet-mapping>
        <servlet-name>KaptchaServlet</servlet-name>
        <url-pattern>/Kaptcha.jpg</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>UserLoginFilter</filter-name>
        <filter-class>com.nb.filter.UserLoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserLoginFilter</filter-name>
        <url-pattern>/pages/user/personal.jsp</url-pattern>
    </filter-mapping>
</web-app>

